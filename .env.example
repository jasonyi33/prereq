# Supabase (get from Supabase Dashboard > Settings > API)
SUPABASE_URL=https://YOUR-PROJECT.supabase.co
SUPABASE_KEY=your-anon-public-key
SUPABASE_JWT_SECRET=your-jwt-secret
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Flask API URL (server-side, used by Next.js API routes)
FLASK_API_URL=http://localhost:5000

# Flask API URL (client-side, used by browser fetch calls to Flask)
NEXT_PUBLIC_FLASK_API_URL=http://localhost:5000

# Anthropic (used by Next.js API routes for Claude calls)
ANTHROPIC_API_KEY=sk-ant-...

# Perplexity (used by resource search endpoint)
PERPLEXITY_API_KEY=pplx-...

# Demo mode (enables simulator + auto-responder)
DEMO_MODE=true

# Zoom RTMS (optional â€” if not set, falls back to simulator)
# Global credentials (legacy/demo mode). Per-teacher credentials are stored in the DB.
ZOOM_CLIENT_ID=
ZOOM_CLIENT_SECRET=
# Base URL for the frontend (Zoom webhook/OAuth callbacks)
# Defaults to https://prereq-frontend.onrender.com if not set
FRONTEND_BASE_URL=https://prereq-frontend.onrender.com

# Public app URL (used by Zoom settings dialog for webhook/OAuth URLs)
# Set to your Render URL in production, e.g. https://prereq-frontend.onrender.com
NEXT_PUBLIC_APP_URL=
